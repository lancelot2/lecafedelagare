<p id="notice"><%= notice %></p>


<h1>Listing of exquisite restaurants in Paris</h1>

<table>
  <thead>
    <tr>
      <th style="padding: 10px">Name</th>
      <th style="padding: 10px">Address</th>
      <th style="padding: 10px">Category</th>
      <th style="padding: 10px">Description</th>
      <th style="padding: 10px">Stars</th>
      <th style="padding: 10px" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td style="padding: 10px"><%= restaurant.name %></td>
        <td style="padding: 10px"><%= restaurant.address %></td>
        <td><%= restaurant.category %></td>
        <td style="padding: 10px" class="description"><%= restaurant.description %></td>
        <td style="padding: 10px" class="text-center"><%= restaurant.stars %></td>

        <td style="padding: 4px"><%= link_to restaurant, method: :get, class: "btn btn-primary" do %>
        <i class="fa fa-info-circle"></i> Info </td>
        <% end %>

        <td style="padding-right: 4px"><%= link_to edit_restaurant_path(restaurant), method: :get, class: "btn btn-success" do %>
        <i class="fa fa-pencil"></i> Edit </td>
        <% end %>

        <td style="padding-right: 4px"><%= link_to restaurant, method: :delete, data: { confirm: "Are you really really sure?" }, class: "btn btn-danger" do %>
        <i class="fa fa-trash"></i> Delete </td>
        <% end %>

      </tr>

    <% end %>
  </tbody>
</table>

<br>
